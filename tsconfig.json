{
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"strict": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [ "node" ],
		"lib": [
			"es2017",
			"dom"
		],
		"watch": true
	},
	"compileOnSave": false,
	"angularCompilerOptions": {
		"strictMetadataEmit" : true
	  }
}
